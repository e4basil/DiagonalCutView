<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/colorPrimary" />
    <item>
        <bitmap
            android:alpha="0.1"
            android:gravity="center"
            android:src="@drawable/bebe" />
    </item>

    <item
        android:bottom="-100dp"
        android:left="0dp"
        android:right="-300dp"
        android:top="300dp">


        <!--Top, Left, Bottom and Right is like padding. Top value= layout height.-->
        <!--Bottom with minus value, so the shape is drawn to bottom, not up. -->
        <!--Minus value for right means the shape will be drawn far right from app border-->
        <!---->
        <rotate
            android:fromDegrees="-10"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape android:shape="rectangle">
                <solid android:color="?android:colorBackground" />
            </shape>

            <!--In android coordinate system, (0, 0) is at the bottom-left. -->
            <!--We want the anchor to be in left top, so the pivotY will be 100% (top).-->
        </rotate>
    </item>

</layer-list>